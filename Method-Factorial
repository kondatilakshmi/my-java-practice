import java.util.*;
public class Factorial
{
    public static void main(String[] args)
    {
    Scanner sc=new Scanner(System.in);
    int a=sc.nextInt();
    int f=1,i=1;
    while(f<a)
    {
        i=i+1;
        f=f*i;
    }
    if(f==a)
    {
        System.out.println("yes");
    }
    else
    {
        System.out.println("No");
    }
  }
}
